<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.bsc.dcc.vcv</groupId>
	<artifactId>client</artifactId>
	<packaging>jar</packaging>
	<version>1.1-SNAPSHOT</version>
	<name>client</name>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<!--  Previously used version 2.8.2 -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.11.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.11.2</version>
		</dependency>
		<dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.25</version>
        </dependency>
        <!-- Binding for Log4J -->
    	<dependency>
        	<groupId>org.apache.logging.log4j</groupId>
        	<artifactId>log4j-slf4j-impl</artifactId>
        	<version>2.12.0</version>
    	</dependency>
	</dependencies>
	<properties>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.compiler.source>1.8</maven.compiler.source>
	</properties>
	<build>
		<directory>targetanalyticsrecorder</directory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<includes>
						<include>org/bsc/dcc/vcv/AnalyticsRecorder.java</include>
						<include>org/bsc/dcc/vcv/AnalyticsRecorderConcurrent.java</include>
						<include>org/bsc/dcc/vcv/AnalyticsRecorderConcurrentLimit.java</include>
						<include>org/bsc/dcc/vcv/QueryRecord.java</include>
						<include>org/bsc/dcc/vcv/QueryRecordBigQuery.java</include>
						<include>org/bsc/dcc/vcv/QueryRecordConcurrent.java</include>
						<include>org/bsc/dcc/vcv/QueryRecordConcurrentBigQuery.java</include>
						<include>org/bsc/dcc/vcv/QueryRecordConcurrentLimit.java</include>
					</includes>
					<testExcludes>
        				<testExclude>**/*</testExclude>
      				</testExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

