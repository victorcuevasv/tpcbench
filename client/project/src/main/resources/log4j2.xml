<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{2} %C{1} - %msg%n" />
		</Console>
		<!--  
		<File name="LogFile" fileName="/data/logs/all.log" immediateFlush="true" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		-->
		<!--  
		<File name="AnalyticsLogFile" fileName="/data/logs/analytics.log" immediateFlush="true" append="false">
			<PatternLayout pattern="%msg%n" />
		</File>
		-->
		
		<RollingFile
    		name="LogRollingFile"
    		fileName="/data/logs/all.log"
    		filePattern="/data/logs/all_%i_%d{yyyy-MM-dd_HH:mm}.log">
    		<PatternLayout>
        		<Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
    		</PatternLayout>
    		<Policies>
            	<OnStartupTriggeringPolicy />
        	</Policies>
    		<DefaultRolloverStrategy max="1" />
		</RollingFile>
		
	</Appenders>
	<Loggers> 
		<Root level="info">
			<AppenderRef ref="Console" />
			<!-- <AppenderRef ref="LogFile" /> -->
			<AppenderRef ref="LogRollingFile" />
		</Root>
		<Logger name="AnalyticsLog" level="info" additivity="false">
    		<!-- <AppenderRef ref="AnalyticsLogFile" /> -->
		</Logger>
		<Logger name="AllLog" level="info" additivity="false">
    		<!-- <AppenderRef ref="LogFile" /> -->
    		<AppenderRef ref="LogRollingFile" />
		</Logger>
	</Loggers>
</Configuration>



