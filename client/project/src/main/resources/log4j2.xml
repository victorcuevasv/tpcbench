<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="LogFile" fileName="/data/logs/all.log" immediateFlush="true" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		<!--  
		<File name="AnalyticsLogFile" fileName="/data/logs/analytics.log" immediateFlush="true" append="false">
			<PatternLayout pattern="%msg%n" />
		</File>
		-->
	</Appenders>
	<Loggers> 
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="LogFile" />
		</Root>
		<Logger name="AnalyticsLog" level="info" additivity="false">
    		<!-- <AppenderRef ref="AnalyticsLogFile" /> -->
		</Logger>
		<Logger name="AllLog" level="info" additivity="false">
    		<!-- <AppenderRef ref="LogFile" /> -->
    		
    		<appender name="rollingFile" class="org.apache.log4j.RollingFileAppender">
    			<param name="fileName" value="/data/logs/all.log" />
    			
    			<param name="filePattern" value="/data/logs/all%i.log"/>
    			
    			<param name="MaxBackupIndex" value="1" />
        		<layout class="org.apache.log4j.PatternLayout">
            		<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n" />
        		</layout>
			</appender>
    		
		</Logger>
	</Loggers>
</Configuration>
